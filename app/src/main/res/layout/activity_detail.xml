<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.contactDetail.ContactDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="40dp">
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="center"
        android:background="@drawable/left_arrow"
        android:contentDescription="@string/go_back"
        android:padding="20dp" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"

                tools:context=".app.contactDetail.ContactDetailActivity">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                    <RelativeLayout
                        android:id="@+id/mainCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="350dp"
                                    android:layout_marginTop="100dp"
                                    android:background="@drawable/rounded_with_shadow"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:layout_marginTop="70dp"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="2dp"
                                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                            android:textStyle="bold"
                                            tools:text="Fiction Olay" />

                                        <TextView
                                            android:id="@+id/textLink"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="2dp"
                                            android:gravity="center"
                                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                            android:textStyle="bold"
                                            tools:text="Fiction Olay" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:gravity="center_horizontal|end|right"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_marginBottom="2dp"
                                                android:gravity="center"
                                                android:text="@string/role"
                                                tools:text="Fiction Olay" />

                                            <TextView
                                                android:id="@+id/textRole"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_marginBottom="2dp"
                                                android:gravity="center"
                                                android:text="@string/admin"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="2dp"
                                                android:gravity="center"
                                                android:text="@string/team"
                                                tools:text="Fiction Olay" />

                                            <TextView
                                                android:id="@+id/textParty"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="2dp"
                                                android:gravity="center"
                                                android:text="@string/product"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                                android:textStyle="bold" />
                                        </LinearLayout>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/bottomButtonLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:gravity="center"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1">
                                        <ImageButton
                                            android:id="@+id/buttonCall"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_margin="20dp"
                                            android:padding="20dp"
                                            android:contentDescription="@string/call"
                                            android:background="@drawable/phone"
                                            android:text="@string/call" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:gravity="center"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1">
                                        <ImageButton
                                            android:id="@+id/buttonSMS"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_margin="20dp"
                                            android:padding="20dp"
                                            android:background="@drawable/speak"
                                            android:text="@string/SMS" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:gravity="center"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1">
                                        <ImageButton
                                            android:id="@+id/buttonEmail"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_margin="20dp"
                                            android:padding="20dp"
                                            android:background="@drawable/email"
                                            android:text="@string/email" />
                                    </LinearLayout>
                                </LinearLayout>

                                </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="70dp"
                                android:layout_gravity="center_horizontal"
                                android:elevation="15dp"
                                app:cardCornerRadius="50dp">
                            <ImageView
                                android:id="@+id/detailScreenImage"
                                android:src="@mipmap/ic_launcher"
                                android:layout_width="@dimen/imageSize"
                                android:layout_height="@dimen/imageSize"
                                android:padding="10dp"
                                android:contentDescription="@string/photo"
                                android:scaleType="fitCenter" />
                            </androidx.cardview.widget.CardView>



                        </FrameLayout>
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mainCard"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/displayPage"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:elevation="2dp"
                                app:contentPadding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="start|left"
                                        android:text="@string/address"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textAddress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/address"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:elevation="2dp"
                                app:contentPadding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="start|left"
                                        android:text="@string/office"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textOffice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/office"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:elevation="2dp"
                                app:contentPadding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="start|left"
                                        android:text="@string/name"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textPersonName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/name"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:elevation="2dp"
                                app:contentPadding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="start|left"
                                        android:text="@string/birthday"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textBirthday"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/birthday"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:elevation="2dp"
                                app:contentPadding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="start|left"
                                        android:text="@string/endDate"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textEndDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/endDate"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:elevation="2dp"
                                app:contentPadding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="start|left"
                                        android:text="@string/gender"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textGender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/gender"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:elevation="2dp"
                                app:contentPadding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="start|left"
                                        android:text="@string/sortName"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textSortName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/sortName"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:elevation="2dp"
                                app:contentPadding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="start|left"
                                        android:text="@string/website"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textWebsite"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/website"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:elevation="2dp"
                                app:contentPadding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="start|left"
                                        android:text="@string/phone"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textPhone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2dp"
                                        android:text="@string/phone"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/ic_cloud_off_white_60dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/generic_error"
        android:textAlignment="center" />
</RelativeLayout>